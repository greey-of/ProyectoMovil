<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:elevation="6dp"
    android:padding="18dp"
    android:layout_marginBottom="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de receta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#742844" />

    <!-- Descripción corta -->
    <TextView
        android:id="@+id/tv_recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción corta..."
        android:textColor="#555"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <!-- Rating y calorías -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_recipe_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐⭐⭐⭐⭐"
            android:textColor="#F2B000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_recipe_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | 250 cal"
            android:textColor="#777"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <!-- BOTÓN mostrar más -->
    <Button
        android:id="@+id/btn_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar más ▼"
        android:background="@drawable/button_outline"
        android:textColor="#742844"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>

    <!-- CONTENIDO EXPANDIDO -->
    <LinearLayout
        android:id="@+id/expanded_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <!-- Historia -->
        <TextView
            android:id="@+id/tv_recipe_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historia..."
            android:textSize="14sp"
            android:textColor="#444"/>

        <!-- Ingredientes -->
        <TextView
            android:id="@+id/tv_recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ingredientes..."
            android:textSize="14sp"
            android:textColor="#444"/>

        <!-- Preparación -->
        <TextView
            android:id="@+id/tv_recipe_preparation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Preparación..."
            android:textSize="14sp"
            android:textColor="#444"/>

        <!-- Botón reseña -->
        <Button
            android:id="@+id/btn_add_review"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Agregar reseña"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient_historical"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</LinearLayout>
