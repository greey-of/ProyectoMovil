<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5F0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Botón atrás -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Regresar"
            android:padding="6dp"
            android:background="@drawable/bg_circle_light" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recetas Históricas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#742844"
            android:layout_marginTop="16dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtra recetas por tipo, calorías, rating o ingredientes"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginBottom="16dp"/>

        <!-- TARJETA DE FILTROS BONITA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <!-- Dropdown Tipo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de receta"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:layout_marginBottom="12dp">

                <AutoCompleteTextView
                    android:id="@+id/filter_type_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dropdown Rating -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rating"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:layout_marginBottom="12dp">

                <AutoCompleteTextView
                    android:id="@+id/filter_rating_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dropdown Ingrediente -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrediente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:layout_marginBottom="12dp">

                <AutoCompleteTextView
                    android:id="@+id/filter_ingredient_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dropdown Calorías -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calorías"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:layout_marginBottom="16dp">

                <AutoCompleteTextView
                    android:id="@+id/filter_calories_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón limpiar filtros -->
            <Button
                android:id="@+id/btn_clear_filters"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Limpiar filtros"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient_historical"
                android:elevation="4dp"/>
        </LinearLayout>

        <!-- CONTENEDOR DE RECETAS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</ScrollView>
