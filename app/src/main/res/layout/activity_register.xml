<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F0F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con degradado -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/register_header_gradient">

            <!-- Círculo decorativo -->
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/circle_gradient_register"
                android:elevation="8dp"/>

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:text="Crear Cuenta"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:elevation="10dp"/>

        </RelativeLayout>

        <!-- Formulario Principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/form_background"
            android:elevation="12dp">

            <!-- Subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completa tu perfil nutricional"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"/>

            <!-- INFORMACIÓN PERSONAL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información Personal"
                android:textColor="#742844"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Nombre -->
            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Nombre *"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp"/>

            <!-- Apellidos -->
            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Apellidos *"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp"/>

            <!-- Correo -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Correo electrónico *"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp"/>

            <!-- Contraseña -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Contraseña (mínimo 6 caracteres) *"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="textPassword"
                android:layout_marginBottom="12dp"/>

            <!-- Confirmar Contraseña -->
            <EditText
                android:id="@+id/et_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Confirmar contraseña *"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="textPassword"
                android:layout_marginBottom="24dp"/>

            <!-- OBJETIVOS Y PERFIL FÍSICO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objetivos y Perfil Físico"
                android:textColor="#742844"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Botón Objetivo -->
            <Button
                android:id="@+id/btn_objective"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Seleccionar objetivo *"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_gradient"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_objective_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin seleccionar"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Botón Género -->
            <Button
                android:id="@+id/btn_gender"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Seleccionar género *"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_gradient"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin seleccionar"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Edad -->
            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Edad (años) *"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="number"
                android:layout_marginBottom="12dp"/>

            <!-- Altura -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/et_height_value"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:hint="Altura *"
                    android:textColorHint="#999999"
                    android:textColor="#2C2C2C"
                    android:background="@drawable/input_rounded_white"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:inputType="numberDecimal"/>

                <Spinner
                    android:id="@+id/sp_height_unit"
                    android:layout_width="90dp"
                    android:layout_height="54dp"
                    android:background="@drawable/spinner_rounded"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Peso Actual -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/et_weight_value"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:hint="Peso actual *"
                    android:textColorHint="#999999"
                    android:textColor="#2C2C2C"
                    android:background="@drawable/input_rounded_white"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:inputType="numberDecimal"/>

                <Spinner
                    android:id="@+id/sp_weight_unit"
                    android:layout_width="90dp"
                    android:layout_height="54dp"
                    android:background="@drawable/spinner_rounded"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Peso Objetivo -->
            <EditText
                android:id="@+id/et_target_weight"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Peso objetivo *"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp"/>

            <!-- IMC Calculado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bmi_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu Índice de Masa Corporal"
                    android:textColor="#742844"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_bmi_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMC: -- (Ingresa peso y altura)"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Nivel de Actividad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de actividad física *"
                android:textColor="#5A5A5A"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/sp_activity_level"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/spinner_rounded"
                android:layout_marginBottom="24dp"/>

            <!-- CONDICIONES MÉDICAS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condiciones Médicas"
                android:textColor="#742844"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona si aplica alguna condición:"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginBottom="12dp"/>

            <CheckBox android:id="@+id/cb_diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_eating_disorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trastorno alimenticio"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_thyroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problemas tiroideos"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_renal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problemas renales/hepáticos"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_digestive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enfermedades digestivas"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_pregnancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Embarazo o lactancia"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_medical_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otro"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <EditText
                android:id="@+id/et_medical_other"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Especificar otra condición"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:enabled="false"/>

            <!-- PREFERENCIAS DIETÉTICAS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferencias Dietéticas"
                android:textColor="#742844"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona tu tipo de dieta preferida:"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginBottom="12dp"/>

            <CheckBox android:id="@+id/cb_vegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetariano"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegano"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_pescetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pescetariano"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_keto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keto"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_paleo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paleo"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ninguna restricción"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"
                android:layout_marginBottom="24dp"/>

            <!-- ALERGIAS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alergias / Intolerancias"
                android:textColor="#742844"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca si tienes alguna alergia o intolerancia:"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginBottom="12dp"/>

            <CheckBox android:id="@+id/cb_gluten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gluten / Celíaca"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_lactose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lactosa"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_nuts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frutos secos"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_shellfish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mariscos"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <CheckBox android:id="@+id/cb_allergy_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otra"
                android:textColor="#2C2C2C"
                android:buttonTint="#742844"/>

            <EditText
                android:id="@+id/et_allergy_other"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Especificar alergia"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:enabled="false"/>

            <!-- PREFERENCIAS ADICIONALES -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferencias Adicionales"
                android:textColor="#742844"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_disliked_foods"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="¿Qué alimentos no te gustan? (Opcional)"
                android:textColorHint="#999999"
                android:textColor="#2C2C2C"
                android:background="@drawable/input_rounded_white"
                android:padding="16dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:layout_marginBottom="20dp"/>

            <!-- Nota -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Campos obligatorios"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>

            <!-- BOTONES -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Registrar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_gradient"
                android:elevation="6dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cancelar"
                android:textColor="#742844"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_outline"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>